<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.yxyyeapp">


    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tu"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.LoginActivity"/>
        <activity android:name=".Activity.RegisterActivity"/>
        <activity android:name=".Fragment.FragmentActivity"/>
        <activity android:name=".Activity.ResetPwdActivity"/>
        <activity android:name=".Activity.InformationActivity"/>
        <activity android:name=".Activity.UploadHeadActivity"/>
        <activity android:name=".Activity.RecruitActivity"/>
        <activity android:name=".Activity.VolunteerRecruit"/>
        <activity android:name=".NearActivityRecruit"/>
        <activity android:name=".Activity.SettingActivity"/>
        <activity android:name=".Activity.SoftwareActivity"/>
        <activity android:name=".Activity.Change_Password"/>
        <activity android:name=".Activity.OnChatActivity"/>
        <activity android:name=".Activity.NewRecruitActivity"/>

    </application>

</manifest>